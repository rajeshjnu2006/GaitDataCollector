<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.rogcg.gridviewexample.SquareImageView
        android:id="@+id/observation_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#55000000"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/observation_upload"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/projects_item_button_size"
            android:layout_height="@dimen/projects_item_button_size"
            android:layout_marginRight="@dimen/projects_item_button_size"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_label_upload"
            android:scaleType="fitXY"
            android:src="@drawable/project_button_cloud" />

        <ImageButton
            android:id="@+id/observation_discard"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/projects_item_button_size"
            android:layout_height="@dimen/projects_item_button_size"
            android:adjustViewBounds="true"
            android:background="@color/android:transparent"
            android:contentDescription="@string/button_label_delete"
            android:scaleType="fitXY"
            android:src="@drawable/project_button_delete" />
    </LinearLayout>

</FrameLayout>