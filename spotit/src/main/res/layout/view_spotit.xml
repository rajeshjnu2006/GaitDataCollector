<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".SpotitFragment" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/spotit_camera"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:drawableTop="@drawable/blue_camera_button"
        android:text="@string/capture_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/spotit_gallery"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:drawableLeft="@drawable/ic_action_picture"
        android:text="@string/browse_gallery"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>